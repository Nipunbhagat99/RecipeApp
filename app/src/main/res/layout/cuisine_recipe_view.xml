<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_cuisine"
    android:layout_margin="5dp"
    card_view:cardElevation="4dp"
    card_view:cardCornerRadius="20dp"
    android:clickable="true"
    android:focusable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image_cuisine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/white"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent"

            />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="2"
            tools:layout_height="100dp"
            android:gravity="center"
            android:layout_height="match_parent">
            <TextView
                android:padding="2dp"
                android:id="@+id/tv_cuisine_recipe_name"
                android:gravity="center"

                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Random Recipe Title"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                >
                <TextView
                    android:gravity="center"
                    android:textSize="12sp"
                    android:layout_weight="1.6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Time (Minutes)"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="3dp"
                    android:layout_marginStart="3dp"
                    />

                <TextView
                    android:gravity="center"
                    android:textSize="12sp"

                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="3dp"
                    android:layout_weight="1.2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Servings"
                    />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >
                <ImageView
                    android:foregroundGravity="right"
                    android:layout_margin="3dp"
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_clock"
                    />
                <TextView
                    android:id="@+id/tv_cuisine_time"
                    android:textSize="12sp"
                    android:layout_weight="1.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="45"

                    android:layout_margin="3dp"

                    />

                <ImageView
                    android:layout_gravity="center"
                    android:layout_margin="3dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_waiter"
                    />

                <TextView

                    android:id="@+id/tv_cuisine_servings"
                    android:textSize="12sp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="400"

                    />



            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>